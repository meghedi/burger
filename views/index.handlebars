<h1>Eat Da Burger!</h1>

<ul>
  {{#each burgers}}
  <li>
    {{#unless devoured}}
      {{burger_name}}
    {{/unless}}
    <button class="devouredToggle" data-id={{id}} data-devoured={{devoured}}>Devour it!</button>
   </li> 
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
  <li>
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
    
   </li> 
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit" class="btn">Add Burger</button>
</form>
