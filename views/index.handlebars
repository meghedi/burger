<h1>Eat Da Burger!</h1>
<div class="mainContainer">
  <div>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        <div>
          {{id}}. {{burger_name}}
        </div>
        <button class="devouredToggle" data-id={{id}} data-devoured={{devoured}}>Devour it!</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
        <li>
          <div>
          {{burger_name}}
          </div>
        </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit" class="btn">Add Burger</button>
</form>